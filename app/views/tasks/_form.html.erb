<%= form_with(model: task) do |form| %>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description,
        class: "form-control",
        autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= form.submit "Create Task", class: "btn btn-primary" %>
  </div>
<% end %>
